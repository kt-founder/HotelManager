<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ui.managerhome.EditRoomActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Room"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:id="@+id/spinner_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/hotel_name_array" />

        <EditText
            android:id="@+id/edit_hotel_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hotel Location" />

        <Spinner
            android:id="@+id/spinner_room_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/room_type_array" />

        <EditText
            android:id="@+id/edit_number_of_beds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Beds" />

        <EditText
            android:id="@+id/edit_room_facilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room Facilities" />

        <EditText
            android:id="@+id/edit_price_per_night"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price per Night" />

        <EditText
            android:id="@+id/edit_room_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room Number" />

        <EditText
            android:id="@+id/edit_room_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room Status" />

        <Button
            android:id="@+id/btn_save_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
